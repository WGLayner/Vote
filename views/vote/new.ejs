<form action="/vote/create" class="form-horizontal">
  <h3>请给嘉宾投上你宝贵的一票 </h3>
  <label>请对第</label><label id="label_question_id"><%= question_id%></label><label>轮问题投票</label>

  <fieldset>
  
  <div class="form-group">
  <input id="btn1" type="button" value="1号嘉宾" class="form-control btn btn-success guest">
  </div>

  <div class="form-group">
  <input id="btn2" type="button" value="2号嘉宾" class="form-control btn btn-success guest">
  </div>

  <div class="form-group">
  <input id="btn3" type="button" value="3号嘉宾" class="form-control btn btn-success guest">
  </div>

  <div class="form-group">
  <input id="btn4" type="button" value="4号嘉宾" class="form-control btn btn-success guest">
  </div>

  <input id="question" type="hidden" name="question" value= <%= question_id %> >
  <input id="choice" type="hidden" name="choice" value=<%=choice%> >
  <input id="userid" type="hidden" name="user" value=<%=user%> >


  <input id="submit" type="submit" value="投票" class="form-control btn btn-success">
  <label><%= message %></label>  

  </fieldset>

</form>

